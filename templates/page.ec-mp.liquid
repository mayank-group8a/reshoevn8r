<script>
    /* When the user clicks on the button,
    toggle between hiding and showing the dropdown content */
    function toggleDropdown() {
        document.querySelector('#menu-dropdown').classList.toggle('ec-mp-show');
    }

    // Close the dropdown menu if the user clicks outside of it
    window.onclick = function(event) {
        if (!event.target.matches('.ec-mp-dropbtn')) {
            let dropdowns = document.getElementsByClassName("ec-mp-dropdown-content");
            let i;
            for (i = 0; i < dropdowns.length; i++) {
                let openDropdown = dropdowns[i];
                if (openDropdown.classList.contains('ec-mp-show')) {
                    openDropdown.classList.remove('ec-mp-show');
                }
            }
        }
    }
</script>
