<style>
    .ec-container {
        display: flex;
        flex-flow: column wrap;
        justify-content: center;
        align-items: center;
        width: 100%;
        padding: 0 2rem;
        margin: 3rem auto;
    }

    .ec-row {
        display: flex;
        flex-flow: row wrap;
        justify-content: center;
        width: 100%;
        padding: 1rem;
        margin: 2rem 0;
    }

    .ec-col {
        display: flex;
        flex-flow: column wrap;
        justify-content: center;
        align-items: center;
        margin: 1rem .5rem;
    }

    .ec-hero {
        width: 100%;
        height: auto;
    }

    .ec-line {
        width: 75%;
        margin: 4rem auto;
        border-top: 2px outset #f1f1f1;
    }

    .ec-btn, .ec-a-btn {
      display: block !important;
      border: 2px solid black;
      background: transparent;
      height: auto;
      padding: 1.7rem 2rem !important;
      font-family: apercu;
      font-size: 1.5rem;
      color: black;
      letter-spacing: 2px;
      text-transform: uppercase;
      transition: 0.4s !important;
    }
    
    .ec-btn:hover, .ec-a-btn:hover {
      background-color: black;
      color: white;
    }

    .ec-mp-container {
        display: flex;
        flex-flow: row nowrap;
        justify-content: flex-start;
        width: 100%;
    }

    .ec-mp-sidebar {
        min-width: 300px;
        padding: 0 1.5rem;
        order: 1;
        display: flex;
        flex-flow: column wrap;
    }

    .ec-mp-sidebar-select {
        display: none;
        border: 2px solid  rgb(74, 74, 74);
        border-radius: 25px;
        background-color: rgb(245, 242, 242);
        text-align: center;
    }

    .ec-mp-sidebar-item {
        padding: .5rem;
        margin: .5rem 0;
        text-decoration: none;
        font-weight: 900;
        color: rgb(74, 74, 74);
        display: flex;
        flex-flow: row wrap;
        align-items: center;
    }

    .ec-mp-sidebar-item:hover {
        border: 2px solid  rgb(74, 74, 74);
        border-radius: 25px;
        background-color: rgb(245, 242, 242);
    }

    .ec-mp-sidebar-item > span {
        font-size: 1.25rem;
        font-weight: 900;
    }

    .ec-mp-sidebar-icon {
        max-width: 32px;
        max-height: 32px;
        margin-right: 1rem;
    }

    .ec-mp-content {
        order: 2;
    }

    /* Dropdown Button */
    .ec-mp-dropbtn {
        background-color: rgb(245, 242, 242);
        color:black;
        padding: .5rem 1.5rem;
        font-size: 1rem;
        border: 2px solid black;
        border-radius: 15px;
        cursor: pointer;
    }

    /* Dropdown button on hover & focus */
    .ec-mp-dropbtn:hover, .dropbtn:focus {
        background-color: rgb(245, 242, 242);
    }

    /* The container <div> - needed to position the dropdown content */
    .ec-mp-dropdown {
        position: relative;
        display: none;
    }

    /* Dropdown Content (Hidden by Default) */
    .ec-mp-dropdown-content {
        display: none;
        position: absolute;
        background-color: rgb(245, 242, 242);
        min-width: 160px;
        box-shadow: 0px .75rem 1.5rem 0px rgba(0,0,0,0.2);
        z-index: 1;
    }

    /* Links inside the dropdown */
    .ec-mp-dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: flex;
        flex-flow: row wrap;
    }

    /* Change color of dropdown links on hover */
    .ec-mp-dropdown-content a:hover {
        background-color: #ddd
    }

    /* Show the dropdown menu (use JS to add this class to the .dropdown-content container when the user clicks on the dropdown button) */
    .ec-mp-show { 
        display: block;
    }

    /* Hide a mobile-only discount title */
    .ec-mp-discount-title {
        display: none;
        font-weight: 900;
        padding: .5rem 1.5rem;
    }

    @media only screen and (max-width: 649px) {
        .ec-mp-discount-title {
            display: block;
        }

        .ec-mp-container {
            flex-flow: column wrap;
            justify-content: center;
            align-items: center;
        }

        .ec-mp-sidebar {
            flex-flow: row wrap;
            justify-content: center;
            width: 100%;
            margin-bottom: 2.5rem;
        }

        .ec-mp-sidebar-list {
            display: none;
        }

        .ec-mp-sidebar-title {
            display: none;
        }

        .ec-mp-dropdown {
            display: inline-block;
        }
    }
</style>
