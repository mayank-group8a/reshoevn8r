$light-grey: #f2f2f2;
$medium-grey: #ebebeb;
$dark-grey: #b0b0b0;
$black: #000;
$white: #fff;

@mixin mobWidth {
  @media (max-width: 749px) {
    @content;
  }
}

@font-face {
  font-family: apercu;
  src: url(./apercu-light-pro.otf);
  font-weight: normal;
  font-style: normal;
}

html {
 padding-bottom:0px !important; 
}

ul,ol,li,p,h1,h2,h3,h4,h5,h6{
     margin:0;
     padding:0;
  	 font-weight: normal;
}

.h1 {
 font-size: 3.2rem;
  letter-spacing: 3px;
  line-height: 4.8rem;
  
  @include mobWidth {
    font-size: 2.4rem;
    letter-spacing: 2.61px;
    line-height: 3.8rem;
  }
}

h1 {
  font-size: 4.8rem;
  letter-spacing: 5px;
/*   text-align: center; */
  line-height: 5.6rem;

  @include mobWidth {
    font-size: 3.2rem;
    letter-spacing: 3.48px;
    line-height: 48px;
  }
}

h2 {
  font-size: 3.2rem;
  letter-spacing: 3px;
  line-height: 4.8rem;
  
  @include mobWidth {
    font-size: 2.4rem;
    letter-spacing: 2.61px;
    line-height: 3.8rem;
  }
}

h2 .small {
  font-size: 2.8rem;
  letter-spacing: 3.5px;
  line-height: 3.6rem;

  @include mobWidth {
    font-size: 2rem;
    letter-spacing: 2.17px;
    line-height: 3rem;
  }
}

h3 {
  font-size: 3.2rem;
  letter-spacing: 0;
  line-height: 4.4rem;

  @include mobWidth {
    font-size: 2.4rem;
    letter-spacing: 0;
    line-height: 3.4rem;
  }
}

h4 {
  font-size: 2rem;
  letter-spacing: 3px;
  line-height: 3rem;
  font-weight: normal;

  @include mobWidth {
    font-size: 1.6rem;
    letter-spacing: 2.4px;
    line-height: 3rem;
    font-weight: normal;
  }
}


.sk-h4 {
  font-size: 2rem;
  letter-spacing: 3px;
  line-height: 3rem;
  font-weight: normal;
  color: #000;
  font-family: apercu;
  text-transform: uppercase;

  @include mobWidth {
    font-size: 1.6rem;
    letter-spacing: 2.4px;
    line-height: 3rem;
    font-weight: normal;
  }
}

h5 {
  font-size: 14px;
  letter-spacing: 2.33px;
  line-height: 2.2rem;

  @include mobWidth {
    font-size: 12px;
    letter-spacing: 1.71px;
    text-align: center;
    line-height: 20px;
  }
}

p {
  font-size: 1.6rem;
}

p .small {
  font-size: 12px;
  line-height: 18px;
}


.sk-btn-primary {
  font-size: 1.2rem;
  background-color: black;
  color: white;
  padding: 1.7rem 5.7rem;
  text-decoration: none;
  text-transform: uppercase;
  display: inline-block;
  letter-spacing: 2px;
  transition: 0.6s;
}
.sk-container-backinstock .sk-btn-backinstock { display: none !important }

.sk-btn-backinstock {
  font-size: 1.2rem;
  width:100% !important;
  background-color: black;
  color: white;
  padding: 1.7rem 5.7rem;
  text-decoration: none;
  text-transform: uppercase;
  margin-top:15px !important;
  display: inline-block;
  letter-spacing: 2px;
  transition: 0.6s;
}

.sk-btn-secondary {
  font-size: 1.2rem;
  background-color: white;
  color: black;
  padding: 1.7rem 5.7rem;
  text-decoration: none;
  display: inline-block;
  letter-spacing: 2px;
   transition: 0.6s;
}

a.sk-add-cart-btn {
 text-decoration: none; 
}

.sk-add-cart-btn {
 display: block !important;
 border: 1px solid black;
 background:transparent;
 padding: 1.7rem 3rem !important;
 font-family: apercu;
 font-size: 1.2rem;
 color: black;
 letter-spacing: 2px;
 max-width:30rem;
 text-transform: uppercase;
   transition: 0.4s;
 
  
  @include mobWidth {
     padding: 9px 22px !important;
  }
}

.sk-home-featured-button {
   margin: auto auto 2.5rem auto; 
  
  @include mobWidth {
     margin-bottom: 1.7rem;
  }
}

.sk-add-cart-btn:hover {
 background:black;
 color: white;
}

.sk-btn-primary:hover {
  background-color: #282828;
}

.sk-btn-secondary:hover {
  background-color: #dedede;
}

.sk-flex {
  display: flex;
}

.sk-card-qty {
 display: none; 
}


.rte a, .rte-setting a, .text-link {
 color: black;
}

.text-center {
 text-align: center; 
}

a.sse-btn {
 color: white !important; 
}

.btnb {
 color: black; 
}